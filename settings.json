{
  // ========================================
  // Appearance & Theme
  // ========================================
  "workbench.iconTheme": "catppuccin-mocha",
  "catppuccin-icons.hidesExplorerArrows": true,
  "custom-ui-style.font.sansSerif": "CaskaydiaCove Nerd Font",
  "custom-ui-style.electron": {
    "frame": false
  },
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#FF6347",
    "editor.selectionHighlightBackground": "#2E2F38B3",
    "editor.wordHighlightBackground": "#2E2F38CC",
    "editor.wordHighlightStrongBackground": "#353740EE",
    "editor.selectionForeground": "#0B0F10",
    "editor.findMatchBackground": "#2A3036",
    "editor.findMatchBorder": "#424A52",
    "editor.findMatchHighlightBackground": "#2A303680",
    "editor.wordHighlightBorder": "#424A52"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // ========================================
  // Window
  // ========================================
  "window.zoomLevel": 0.5,
  "window.titleBarStyle": "native",
  "window.customTitleBarVisibility": "never",
  "zenMode.fullScreen": false,
  "zenMode.showTabs": "none",

  // ========================================
  // Editor - Font & Typography
  // ========================================
  "editor.fontFamily": "CaskaydiaCove Nerd Font, JetBrainsMono Nerd Font",
  "editor.fontSize": 15,
  "editor.lineHeight": 2,
  "editor.fontLigatures": true,

  // ========================================
  // Editor - Cursor & Selection
  // ========================================
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line-thin",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",

  // ========================================
  // Editor - Suggestions & IntelliSense
  // ========================================
  "editor.quickSuggestions": {
    "other": "off"
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.snippetSuggestions": "top",
  "editor.codeLens": true,
  "editor.inlayHints.enabled": "on",
  "editor.hover.enabled": false,

  // ========================================
  // Editor - Layout & Visual
  // ========================================
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.guides.indentation": false,
  "editor.showFoldingControls": "never",
  "editor.stickyScroll.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.bracketPairColorization.enabled": true,

  // ========================================
  // Editor - Behavior
  // ========================================
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",
  "editor.smoothScrolling": true,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.showTabs": "none",

  // ========================================
  // Files & Explorer
  // ========================================
  "files.trimTrailingWhitespace": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "search.quickOpen.includeHistory": false,

  // ========================================
  // Workbench
  // ========================================
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 16,
  "breadcrumbs.enabled": false,

  // ========================================
  // Terminal
  // ========================================
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font, JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.6,
  "terminal.external.osxExec": "Warp.app",
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.cwd": "",

  // ========================================
  // Git
  // ========================================
  "git.autofetch": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,

  // ========================================
  // Extensions
  // ========================================
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // ========================================
  // ESLint
  // ========================================
  "eslint.codeActionsOnSave.mode": "all",

  // ========================================
  // NPM
  // ========================================
  "npm.scriptExplorerAction": "run",
  "npm.enableRunFromFolder": true,

  // ========================================
  // Cursor
  // ========================================
  "cursor.composer.textSizeScale": 1.15,

  // ========================================
  // Updates
  // ========================================
  "update.releaseTrack": "dev",
  "update.mode": "silentlyApplyOnQuit"
}
